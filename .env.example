# -------------------------
# Database
# -------------------------
DATABASE_URL=postgresql://user:password@localhost:5432/mydb
DIRECT_URL=postgresql://user:password@localhost:5432/mydb   # optional, often used for Prisma

# -------------------------
# Google OAuth
# -------------------------
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# -------------------------
# GitHub OAuth + API
# -------------------------
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_OCTOKIT_TOKEN=your_personal_github_token   # for Octokit API access

# -------------------------
# Authentication
# -------------------------
BETTER_AUTH_SECRET=super_secret_key   # used by better-auth or similar

# -------------------------
# AI Keys
# -------------------------
GEMINI_API_KEY=your_gemini_api_key
ASSEMBLYAI_API_KEY=your_assemblyai_api_key

# -------------------------
# Appwrite (Frontend)
# -------------------------
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id
NEXT_PUBLIC_APPWRITE_BUCKET_ID=your_bucket_id

# -------------------------
# Node Environment
# -------------------------
NODE_ENV=development
